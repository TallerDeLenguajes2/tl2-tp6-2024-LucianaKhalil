@model ViewProductos

<form asp-controller="Productos" asp-action="EditarProducto">
    <input type="hidden" asp-for="IdProducto" />
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Precio"></label>
        <input asp-for="@Model.Precio" class="form-control" />
    </div>
    <button type="submit">Enviar</button>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }