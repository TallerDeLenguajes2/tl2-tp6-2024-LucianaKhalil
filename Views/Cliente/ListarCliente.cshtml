@model List<Cliente>

<h2 class="text-primary mb-4">Lista de clientes</h2>

<table class="table table-striped table-bordered table-hover shadow-sm">
    <thead class="table-dark text-uppercase">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Telefono</th>
            <th scope="col">E-mail</th>
            <th scope="col" class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <th scope="row" class="text-center text-primary">@c.ClienteId</th>
                <td>@c.Nombre</td>
                <td>@c.Telefono</td>
                <td>@c.Email</td>
                <td class="text-center">
                    <a asp-controller="Cliente" asp-action="EditarCliente" asp-route-id="@c.ClienteId" class="btn btn-warning btn-sm mx-1">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-controller="Cliente" asp-action="DeleteCliente" asp-route-id="@c.ClienteId" class="btn btn-danger btn-sm mx-1">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end mt-3">
    <a asp-controller="Cliente" asp-action="CrearCliente" class="btn btn-success btn-lg">
        <i class="bi bi-plus-circle"></i> Agregar Cliente
    </a>
</div>