@model ViewCliente

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 bg-light p-4 shadow rounded">
            <h2 class="text-sm-start text-primary mb-4">Modifificar Cliente</h2>

            <form asp-controller="Cliente" asp-action="EditarClientePost" method="post">
              
                <input type="hidden" asp-for="ClienteId" />
                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label font-weight-bold">Nombre</label>
                    <input asp-for="Nombre" class="form-control" placeholder="ej:a Juan Prez">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Telefono" class="form-label font-weight-bold">Telefono</label>
                    <input asp-for="Telefono" class="form-control" placeholder="Ej: 123-456-7890">
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label font-weight-bold">E-mail</label>
                    <input asp-for="Email" class="form-control" placeholder="Ej: correo@ejemplo.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <input type="submit" value="Guardar" class="btn btn-primary px-4" />
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }